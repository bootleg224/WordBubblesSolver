@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div class="col-md-4">
        <form method="post">            
            <textarea id="data" name="data" class="form-control" rows="6" cols="6" placeholder="Enter Puzzle, use _ or space character to denote blank spaces."></textarea>
            <div class="form-group">
                <label for="smallest">Smallest Word</label>
                <input type="number" class="form-control" id="smallest" name="smallest" placeholder="3"/>
            </div>
            <div class="form-group">
                <label for="largest">Largest Word</label>
                <input type="number" class="form-control" id="largest" name="largest" placeholder="6" />
            </div>
            <input type="submit"/>
        </form>
        
        
        
    </div>
    </div>