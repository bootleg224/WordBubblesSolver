@model WordBubblesSolver.Web.Controllers.PuzzleModel
@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div class="col-xs-12">
        <form method="post" enctype="multipart/form-data">
           
            <div class="col-xs-6">
                <input type="file" name="file" id="file" /><br />
                <textarea id="Data" name="Data" class="form-control" rows="6" cols="6" placeholder="Upload screenshot above or Enter Puzzle here, use _ or space character to denote blank spaces.">@Model.Data</textarea>
                
                <br/>
                
                @foreach (var solution in Model.Solutions)
                {
                    foreach (var s in solution)
                    {
                        @(s.Length.ToString("00") + ": ") @s <br />
                    }
                    <hr />
                }

            </div>

            <div class="col-xs-6">
                @if (Model.Base64Image != null)
                {
                    <img style="width:auto; height:300px;" src="data:image/png;base64,@Model.Base64Image" />    <br/><br/>
                }   
                
                <input type="submit" />             
            </div>
                       
