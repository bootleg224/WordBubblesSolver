                <label for="smallest">Smallest Word</label>
                <input type="number" class="form-control" id="Smallest" name="Smallest" placeholder="3" value="@Model.Smallest" />
            </div>
            <div class="form-group">
                <label for="largest">Largest Word</label>
                <input type="number" class="form-control" id="Largest" name="Largest" placeholder="6" value="@Model.Largest" />
            </div>*@            
        </form>                        
    </div>        
</div>